<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ATT.Controls.Themes.Styles">
	

    
    <SolidColorBrush x:Key="DefaultBackground" Color="#F1F1F1" />
    <SolidColorBrush x:Key="DefaultForeground" Color="#000000" />
    <SolidColorBrush x:Key="DefaultControlDisable" Color="#AAAAAA" />
    <SolidColorBrush x:Key="DefaultVotingGridBackground" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="DefaultVotingGridMainColumn" Color="#FF999999" />
    <SolidColorBrush x:Key="DefaultVotingGridOppositeColumn" Color="#FFCCCCCC" />    
    <SolidColorBrush x:Key="DefaultChartForegroundBrush" Color="#FF212121" />
    <SolidColorBrush x:Key="DefaultListViewElementBorderBrush" Color="#555555" />

	<x:String x:Key="ImageBucketPath">/ATT.Controls/Assets/delete_sign_black.png</x:String>

	<Style x:Key="textBlockHeader" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="#212121" />
    </Style>
    
    <Style x:Key="buttonPush" TargetType="Button">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Background" Value="#C8C8C8" />
        <Setter Property="Foreground" Value="#000000" />
    </Style>

    <Style x:Key="ErrorToolTipStyle" TargetType="ToolTip">
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="Foreground" Value="#D95A00" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="9" />
    </Style>

</ResourceDictionary>

